#!/bin/bash

set -x
set -eo pipefail
shopt -s dotglob

BWS_VERSION=${BWS_VERSION:=0.3.0}

curl -L -o /tmp/bws.zip https://github.com/bitwarden/sdk/releases/download/bws-v0.3.0/bws-x86_64-unknown-linux-gnu-${BWS_VERSION}.zip
unzip -o /tmp/bws.zip -d /opt/app-root/bin
rm -f /tmp/bws.zip

exec /usr/libexec/s2i/assemble
